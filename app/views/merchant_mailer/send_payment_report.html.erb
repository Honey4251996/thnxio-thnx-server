<table role="presentation" border="0" cellpadding="0" cellspacing="0">
  <tr>
    <td>
        <h4>Payment notification for <%= @resource[:account_name] %> </h4>
        <p><%= @resource[:address] %></p>
        
        <p>Payment has just been processed for <%= @resource[:items].count %> thnx! to a total of $<%= @resource.total %></p>
        
        <table role="presentation" border="0" cellpadding="0" cellspacing="0">
          <% @resource[:items].each do |item| %>
            <tr>
              <td>Item</td>
              <td><%= item.thnx.redeemed_at %></td>
              <td align="right">$<%= item.unit_thnx_price  %></td>
            </tr>
          <% end %>

          <tr>
            <td colspan="2" align="right">Amount:</td><td align="right">$<%= @resource[:total_amount] %></td>
          </tr>
          <tr>
            <td colspan="2" align="right">Tax:</td><td align="right">$<%= @resource[:total_tax] %></td>
          </tr>
          <tr>
            <td colspan="2" align="right">Total:</td><td align="right">$<%= @resource[:total] %></td>
          </tr>

        </table>

        <p>Thnx for being a part of our gratitude economy <a href="https://thnx.io">thnx.io</a> </p>

        <img src="https://<%=ENV['BASE_HOST']%>/images/logo.png" alt="thnx! logo" width="90"/>
    </td>
  </tr>
</table>