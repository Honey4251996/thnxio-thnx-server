<% #convert the url encoded # back otherwise the email will not convert link
   protocol = "https://"
    protocol = "http://" if Rails.env.development?
    myurl = "#{protocol}#{ENV['BASE_HOST']}/reset_password/#{@resource.reset_password_token}"
%>

